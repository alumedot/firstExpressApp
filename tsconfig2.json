{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "sourceMap": true,
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["esnext"],
    "noEmit": true,
    "skipLibCheck": true,
    "target": "esnext",
    "paths": {
      "*.ts": ["*"]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "lib": [
    "es2017", "esnext"
  ]
}
